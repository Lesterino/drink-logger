<%- include('../partials/header') %>
<form action="/drinks" method="POST">
  <h1>Start a new Log</h1>
  <label>
    Drinks:
    <ul>
      <% drinkList.forEach((i) => { %>
      <li>
        <input
          type="checkbox"
          name="drink"
          value="<%= `${i}` %>"
        />
        <%= `${i.name}` %>
      </li>
      <% }); %>
    </ul>
  </label>
  <br />
  <label>
    Date:
    <input type="text" name="name" />
  </label>
  <br />
</form>

<%- include('../partials/footer') %>
